<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">

<%= form_for(@contact, url: confirm_contacts_path) do |f| %>
 <% if @contact.errors.any? %>
    <div id="error_explanation">
      
      <h2><%= @contact.errors.count %>件のエラーがあります。</h2>

      <ul>
     
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :name, class: 'form-control' %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :email, class: 'form-control' %>
  <%= f.text_field :email %>
  <br>
  <%= f.label :content, class: 'form-control'  %>
  <%= f.text_field :content %>
  <br>
  <%= f.submit 'お問い合わせを送信', class: 'btn-primary btn-block' %>
<% end %>
    </div>
</div>    